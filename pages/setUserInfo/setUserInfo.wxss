/* pages/setUserInfo/setUserInfo.wxss */
page {
  background-color: #ffffff;
  min-height: 100vh;
}
.user-setting{
  padding: 0 30rpx;
}
.user-setting__avatar{
  padding: 50rpx 0;
  text-align: center;
}
.user-setting__avatar .user-setting__avatar-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 0 auto;
  overflow: hidden;
}
.user-setting__avatar .user-setting__avatar-img image{
  width: 100%;
  height: 100%;
}
.user-setting__avatar .user-setting__avatar-tip{
  color: #999;
  font-size: 24rpx;
  margin:  auto;
  display: inline-block;
  background: transparent;
  padding: 0;
}
.user-setting__list .user-setting__list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  height: 100rpx;
}
.user-setting__list .user-setting__list-item .user-setting__list-label{
  color: #666;
  width: 140rpx;
}
.user-setting__list .user-setting__list-item:nth-child(2) .user-setting__list-text{
  color: #666;
}
.user-setting__list .user-setting__list-item:last-child{
  border: 0;
}
.user-setting__list .user-setting__list-item .user-setting__list-left{
  display: flex;
  align-items: center;
}
.user-setting__list .user-setting__list-item .icon-right{
  color: #999;
  font-size: 40rpx;
}
.user-setting__list .user-setting__list-item .btn{
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 24rpx;
  width: 165rpx;
  line-height: 60rpx;
  text-align: center;
}
.user-setting__footer{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30rpx;
  box-sizing: border-box;
}
.user-setting__footer .user-setting__exit-btn{
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 16rpx;
  border: 1rpx solid var(--main-red);
  color: var(--main-red);
}
